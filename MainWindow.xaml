<Window x:Class="personBeheerSysteem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HR Management System" Height="600" Width="800">
    <Grid>
        <TabControl>
            <!-- Employee Tab -->
            <TabItem Header="Employees">
                <StackPanel Margin="10">
                    <!-- Employee Filter TextBox -->
                    <TextBox x:Name="EmployeeFilterTextBox"
                             Text="Filter by Name"
                             Foreground="Gray" Margin="0,5"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             TextChanged="EmployeeFilterTextBox_TextChanged" />

                    <!-- Employee DataGrid -->
                    <DataGrid x:Name="EmployeeDataGrid" AutoGenerateColumns="False" Height="200" Margin="0,0,0,10" SelectionChanged="EmployeeDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding EmployeeID}" Width="50" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Contact Info" Binding="{Binding ContactInfo}" Width="*" />
                            <DataGridTextColumn Header="Salary" Binding="{Binding Salary}" Width="80" />
                            <!-- Changed Department ID to Department Name -->
                            <DataGridTextColumn Header="Department" Binding="{Binding DepartmentName}" Width="120" />
                        </DataGrid.Columns>
                    </DataGrid>


                    <!-- Employee Input Fields -->
                    <TextBox x:Name="EmployeeNameTextBox" Text="Employee Name" Foreground="Gray" Margin="0,5"
                             GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
                    <TextBox x:Name="EmployeeContactTextBox" Text="Contact Info" Foreground="Gray" Margin="0,5"
                             GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
                    <TextBox x:Name="EmployeeSalaryTextBox" Text="Salary" Foreground="Gray" Margin="0,5"
                             GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
                    <ComboBox x:Name="EmployeeDepartmentComboBox" Width="200" Margin="0,5"
                              DisplayMemberPath="DepartmentName" SelectedValuePath="DepartmentID" />

                    <!-- Employee Actions -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0" Width="404">
                        <Button Content="Add Employee" Click="AddEmployeeButton_Click" Width="120" Margin="5" />
                        <Button Content="Edit Employee" Click="EditEmployeeButton_Click" Width="120" Margin="5" />
                        <Button Content="Delete Employee" Click="DeleteEmployeeButton_Click" Width="120" Margin="5" />
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Department Tab -->
            <TabItem Header="Departments">
                <StackPanel Margin="10">
                    <!-- Department Filter TextBox -->
                    <TextBox x:Name="DepartmentFilterTextBox" Text="Filter by Department" Foreground="Gray" Margin="0,5"
                             GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" TextChanged="DepartmentFilterTextBox_TextChanged" />

                    <!-- Department DataGrid -->
                    <DataGrid x:Name="DepartmentDataGrid" AutoGenerateColumns="False" Height="200" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding DepartmentID}" Width="50" />
                            <DataGridTextColumn Header="Name" Binding="{Binding DepartmentName}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Department Input Field -->
                    <TextBox x:Name="DepartmentNameTextBox" Text="Department Name" Foreground="Gray" Margin="0,5"
                             GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />

                    <!-- Department Actions -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <Button Content="Add Department" Click="AddDepartmentButton_Click" Width="140" Margin="5" />
                        <Button Content="Edit Department" Click="EditDepartmentButton_Click" Width="140" Margin="5" />
                        <Button Content="Delete Department" Click="DeleteDepartmentButton_Click" Width="140" Margin="5" />
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Absence Tab -->
            <TabItem Header="Absences">
                <StackPanel Margin="10">
                    <!-- Absence Filter DatePicker -->
                    <DatePicker x:Name="AbsenceFilterDatePicker" Margin="0,5" SelectedDateChanged="AbsenceFilterDatePicker_SelectedDateChanged" />

                    <!-- Absence DataGrid -->
                    <DataGrid x:Name="AbsenceDataGrid" AutoGenerateColumns="False" Height="200" Margin="0,0,0,10" SelectionChanged="AbsenceDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding AbsenceID}" Width="50" />
                            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeID}" Width="100" />
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="100" />
                            <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Absence Input Fields -->
                    <ComboBox x:Name="AbsenceEmployeeComboBox" Width="200" Margin="0,5"
                              DisplayMemberPath="Name" SelectedValuePath="EmployeeID" SelectionChanged="AbsenceEmployeeComboBox_SelectionChanged" />
                    <DatePicker x:Name="AbsenceDatePicker" Margin="0,5" />
                    <TextBox x:Name="AbsenceReasonTextBox" Text="Reason for Absence" Foreground="Gray" Margin="0,5"
                             GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />

                    <!-- Absence Actions -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <Button Content="Add Absence" Click="AddAbsenceButton_Click" Width="120" Margin="5" />
                        <Button Content="Edit Absence" Click="EditAbsenceButton_Click" Width="120" Margin="5" />
                        <Button Content="Delete Absence" Click="DeleteAbsenceButton_Click" Width="120" Margin="5" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
